/*********************************************(GROL) Gladiators: Rise of Legends - Opening.asClass for the Opening Screen!*********************************************/package com.controllers{	import flash.display.MovieClip;	import com.models.Model;	import flash.events.Event;	import flash.events.MouseEvent;	public class Opening extends MovieClip {;	private var m:Model=Model.instance;		public function Opening() {		addEventListener(Event.ADDED_TO_STAGE, onLoad);	}	public function onLoad(e:Event):void {		trace("Opening Loaded");		addEventListener(MouseEvent.CLICK, parseTouch);	}	public function parseTouch(e:MouseEvent):void {		switch (e.target.name) {			case "cont_bttn_mc" :					m.gotoScreen="nameselection";				break;			default : break;						}	}}}