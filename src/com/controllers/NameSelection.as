/*********************************************(GROL) Gladiators: Rise of Legends - NameSelection.asClass for the Name Selection Screen! User selects their name here*********************************************/package com.controllers{	import flash.display.MovieClip;	import com.models.Model;	import flash.events.Event;	import flash.events.MouseEvent;	public class NameSelection extends MovieClip {;	private var m:Model=Model.instance;		public function NameSelection() {		addEventListener(Event.ADDED_TO_STAGE, onLoad);	}	public function onLoad(e:Event):void {		trace("Name Selection Loaded");		addEventListener(MouseEvent.CLICK, parseTouch);	}	public function parseTouch(e:MouseEvent):void {		switch (e.target.name) {			case "cont_bttn_mc" :				if (name_txt.text != "") {					m.gladiatorName=name_txt.text;					m.gotoScreen="classselection";				}				break;			default : break;						}	}}}